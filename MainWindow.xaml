<Window x:Class="ProjectA.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="clr-namespace:ProjectA"
  mc:Ignorable="d"
  Title="MainWindow" Height="450" Width="800" Background="Black">

  <!-- Grid Layout -->
  <Grid Margin="0">
    <Grid.ColumnDefinitions> <!-- Column -->
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions> <!-- Row -->
      <RowDefinition Height="20" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <!-- Top Select MenuBar -->
    <Menu Grid.Row="0" Grid.Column="0">
      <MenuItem Header="File">
        <MenuItem Header="Open" />
        <MenuItem Header="Save" />
        <MenuItem Header="Save As" />
      </MenuItem>
      <MenuItem Header="Options" />
      <MenuItem Header="About">
        <MenuItem Header="GitHub" />
      </MenuItem>
    </Menu>

    <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1">
      <TextBox x:Name="Port_Input"  Text="http://localhost:8080" Width="200" Height="50" />
      <StackPanel>
        <Button x:Name="Apply" Width="100" Height="30 ">Apply</Button>
        <Button x:Name="Conn" Width="100" Height="30">Connect</Button>
        <Button x:Name="DisConn" Width="100" Height="30">DisConnect</Button>
      </StackPanel>
    </StackPanel>

    <ScrollViewer Grid.Row="2">
      <ListBox x:Name="Log_Info"  Width="450" Height="800" />
    </ScrollViewer>
  </Grid>
</Window>
