<Window x:Class="ProjectA.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:ProjectA"
    mc:Ignorable="d"
    Title="MainWindow" Height="450" Width="800" Background="Gray">

    <!-- Grid Layout -->
    <Grid Margin="0">
        <!-- Column Grid -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Row Grid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top User select Menubar -->
        <Menu Grid.Row="0" Grid.Column="0">
            <MenuItem Header="Menu">
                <MenuItem Header="Open">
                    <MenuItem Header="File" Click="Openfile_btn" />
                    <MenuItem Header="Folder" Click="Openfolder_btn" />
                </MenuItem>
                <MenuItem Header="Save" Click="Savefile_btn"/>
                <MenuItem Header="Save As" />
            </MenuItem>
            <!-- <MenuItem Header="Options" Click="SetOptions_btn /> -->
            <MenuItem Header="Options" />
            <MenuItem Header="About">
                <MenuItem Header="GitHub" />
            </MenuItem>
        </Menu>

        <!-- Right HTTP Connection box and Status btn -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" Margin="10,0,0,0">
            <TextBox x:Name="Port_Input" Text="http://localhost:8080" Width="199" Height="110" RenderTransformOrigin="0.487,0.511" TextChanged="Port_Input_TextChanged" VerticalAlignment="Top" />
            <StackPanel Height="207">
                <Button x:Name="Apply" Width="100" Height="30 " Content="Apply"/>
                <Button x:Name="Conn" Width="100" Height="30" Content="Connect"/>
                <Button x:Name="DisConn" Width="100" Height="30" Content="DisConnect"/>
            </StackPanel>
        </StackPanel>

        <!-- Bottom Log information output feature -->
        <ScrollViewer Grid.Row="1" Grid.ColumnSpan="2" Margin="3,2,397,205" Grid.RowSpan="2">
            <ListBox x:Name="Log_Info"  Width="382" Height="205" RenderTransformOrigin="0,0" SelectionChanged="Log_Info_SelectionChanged" >
                <ListBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="-0.429"/>
                        <RotateTransform/>
                        <TranslateTransform X="-1.498"/>
                    </TransformGroup>
                </ListBox.RenderTransform>
            </ListBox>
        </ScrollViewer>
    </Grid>
</Window>
